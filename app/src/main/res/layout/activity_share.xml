<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".share">

    <Button
        android:id="@+id/talk"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/talk"
        android:onClick="chat"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/shopping"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="268dp"
        android:layout_marginLeft="268dp"
        android:background="@drawable/shopping"
        app:layout_constraintBottom_toBottomOf="@+id/talk"
        app:layout_constraintStart_toStartOf="@+id/search"
        app:layout_constraintTop_toTopOf="@+id/talk"
        app:layout_constraintVertical_bias="0.0" />

    <ImageButton
        android:id="@+id/good4"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginEnd="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginBottom="244dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/common_google_signin_btn_icon_dark"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageButton
        android:id="@+id/good3"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="52dp"
        android:layout_marginLeft="52dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/common_google_signin_btn_icon_dark"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/good4"
        app:layout_constraintVertical_bias="0.0" />

    <ImageButton
        android:id="@+id/good2"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/common_google_signin_btn_icon_dark"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/good"
        app:layout_constraintEnd_toEndOf="@+id/good3"
        app:layout_constraintStart_toStartOf="@+id/good3"
        app:layout_constraintTop_toTopOf="@+id/good" />

    <ImageButton
        android:id="@+id/good"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="56dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/common_google_signin_btn_icon_dark_normal"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="@+id/good4"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/good4"
        app:layout_constraintTop_toBottomOf="@+id/shopping" />

    <EditText
        android:id="@+id/search"
        android:layout_width="259dp"
        android:layout_height="39dp"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginBottom="6dp"
        android:autofillHints="search"
        android:hint="@string/app_name"
        android:inputType="textAutoComplete"
        android:selectAllOnFocus="true"
        app:layout_constraintBottom_toBottomOf="@+id/shopping"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/shopping" />

</androidx.constraintlayout.widget.ConstraintLayout>